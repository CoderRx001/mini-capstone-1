<section>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="product_single">
        <h1>Add Photo to <%= @product.name %></h1>
        <%= form_tag "/products/#{@product.id}/images", method: :post do %>
          <div class="form-group">
            <%= label_tag :name %>
            <%= text_field_tag :name, nil, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :url %>
            <%= text_field_tag :url, nil, class: "form-control" %>
          </div>
          <%= submit_tag "Add Photo", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</section>