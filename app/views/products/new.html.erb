<section>
     <div class="row">
       <div class="col-sm-8 col-sm-offset-2">
         <div class="product_single">
           <h1>Create a new nerdy product:</h1>
           <%= form_tag '/products', method: :post do %>
             <div class="form-group">
               Name: <input class="form-control" type="text" name="name">
             </div>
             <div class="form-group">
               Price: <input class="form-control" type="text" name="price">
             </div>
             <div class="form-group">
               Supplier: <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name, {}, class: "form-control" %>
             </div>
             <div class="form-group">
               Description: <input class="form-control" type="text" name="description"> 
             </div>
             <input type="submit" value="Process New Nerdiness">
           <% end %>
         </div>
       </div>
     </div>
   </section>