<section>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="product_single">
        <h1>Edit Product</h1>
        <%= form_tag "/products/#{@product.id}", method: :patch do %>
          <div class="form-group">
            Name: <input class="form-control" type="text" name="name" value="<%= @product.name %>">
          </div>
          <div class="form-group">
            Price: <input class="form-control" type="text" name="price" value="<%= @product.price %>">
          </div>
          <div class="form-group">
            Description: <input class="form-control" type="text" name="description" value="<%= @product.description %>"> 
          </div>
          <input type="submit" value="Update product">
        <% end %>
      </div>
    </div>
  </div>
</section>